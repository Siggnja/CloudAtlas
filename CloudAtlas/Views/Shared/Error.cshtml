@model CloudAtlas.Models.ErrorViewModel

@{
    ViewBag.Title = "Error";
}

<div class="http-error-box">
    <div class="container">
        <img src="https://lc-www-live-s.legocdn.com/r/www/-/media/portal%20v2010/errors/404%20mainstage%20image.jpg?l.r2=1953967734" alt="Lego Error" style="width: 500px;" />

        <h2>@Model.StatusCode</h2>
        <h3>@Model.Message</h3>

        <div class="error-buttons">
            <a class="btn-primary error-button" onclick="javascript:history.back()">Go back</a>
        </div>
    </div>
</div>

